generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  surName   String
  nickName  String
  password  String
}

model Score {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int
  points    Int
}