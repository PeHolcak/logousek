generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  surName   String
  nickName  String
  password  String
  createdAt DateTime @default(now())
}

model Score {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime   @default(now())
  userId        String
  points        Int
  activityType  String
  difficulty    String?
  data     ScoreData[]
}

model ScoreData {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  order         Int
  isCorrect     Boolean
  score         Score @relation(fields: [scoreId], references: [id])
  scoreId       String @db.ObjectId
}